//better appraoch for second largest number finding in the array
public class Main
{
	public static void main(String[] args) {
	    int arr[]={2,3,4,6,6,6,8};
		System.out.println(largest(arr,7));
	}
	public static int largest(int []arr,int n){

	
	int largest=0;
	for(int i=0;i<n;i++){
	    if(arr[i]>largest){
	        largest=arr[i];
	    }
	    
	}
	int slargest=-1;
	for(int i=0;i<n;i++){
	    if(arr[i]<largest&&arr[i]!=largest){
	        slargest=arr[i];
	    }
	}
	return slargest;
	}
	
	
}
